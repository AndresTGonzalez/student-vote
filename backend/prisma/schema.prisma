generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id       String @id @default(cuid())
  level    String
  parallel String

  Student Student[]
}

model Student {
  id                 String  @id @default(cuid())
  identificationCard String
  names              String
  lastNames          String
  canVote            Boolean @default(false)

  courseId String
  course   Course? @relation(fields: [courseId], references: [id])
}
